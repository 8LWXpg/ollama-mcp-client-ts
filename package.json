{
	"name": "ollama-mcp-client",
	"version": "1.0.0",
	"description": "A TypeScript client for connecting Ollama to Model Context Protocol (MCP)",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist.index.d.ts",
			"default": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./dist/types/index.js"
		},
		"./models": {
			"types": "./dist/models/index.d.ts",
			"default": "./dist/models/index.js"
		}
	},
	"bin": "./dist/example/cli.js",
	"files": [
		"dist"
	],
	"license": "MIT",
	"author": "8LWXpg",
	"repository": {
		"url": "https://github.com/8LWXpg/ollama-mcp-client-ts"
	},
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"prepare": "tsc",
		"cli": "bun src/example/cli.ts src/example/server.json"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.5.1",
		"@types/bun": "^1.2.19",
		"@types/node": "^22.17.0",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.1",
		"ollama": "^0.5.16"
	}
}